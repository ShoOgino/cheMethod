    public EnvironmentStateImpl(String name, Recipe recipe, List<? extends MachineConfig> machineStates) {
        this.name = name;
        this.recipe = recipe;
        if (machineStates != null) {
            this.machineStates = machineStates.stream()
                                              .map(MachineStateImpl::new)
                                              .collect(toList());
        }
    }

