    /** @see java.net.URLConnection#getContentLength() */
    @Override
    public int getContentLength() {
        try {
            if (!connected) {
                connect();
            }
            if (item.getItemType() == ItemType.FILE) {
                return (int)((File)item).getLength();
            }
        } catch (IOException e) {
            if (LOG.isDebugEnabled()) {
                LOG.debug(e.getMessage(), e);
            }
        }
        return -1;
    }

