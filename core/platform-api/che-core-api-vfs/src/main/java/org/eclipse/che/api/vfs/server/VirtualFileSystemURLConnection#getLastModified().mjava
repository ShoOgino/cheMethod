    /** @see java.net.URLConnection#getLastModified() */
    @Override
    public long getLastModified() {
        try {
            if (!connected) {
                connect();
            }
            if (item.getItemType() == ItemType.FILE) {
                return ((File)item).getLastModificationDate();
            }
        } catch (IOException e) {
            if (LOG.isDebugEnabled()) {
                LOG.debug(e.getMessage(), e);
            }
        }
        return 0;
    }

