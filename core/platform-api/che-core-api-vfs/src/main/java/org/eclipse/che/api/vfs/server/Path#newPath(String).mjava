    public Path newPath(String name) {
        String[] parsed = ((name == null) || name.isEmpty() || ((name.length() == 1) && (name.charAt(0) == '/')))
                ? EMPTY_PATH : PATH_SPLITTER.split(name.charAt(0) == '/' ? name.substring(1) : name);
        return normalizeParts(parsed, name);
    }

