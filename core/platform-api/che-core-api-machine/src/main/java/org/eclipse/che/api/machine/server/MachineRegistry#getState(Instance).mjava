    private MachineStateImpl getState(Instance instance) {
        return new MachineStateImpl(instance.isDev(),
                                    instance.getName(),
                                    instance.getType(),
                                    instance.getSource(),
                                    instance.getLimits(),
                                    instance.getId(),
                                    instance.getChannels(),
                                    instance.getWorkspaceId(),
                                    instance.getOwner(),
                                    instance.getEnvName(),
                                    instance.getStatus());
    }

