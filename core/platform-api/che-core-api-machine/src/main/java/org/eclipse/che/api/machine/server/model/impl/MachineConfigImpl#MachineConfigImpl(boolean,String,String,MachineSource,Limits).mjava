    public MachineConfigImpl(boolean isDev,
                             String name,
                             String type,
                             MachineSource source,
                             Limits limits) {
        this.isDev = isDev;
        this.name = name;
        this.type = type;
        if (source != null) {
            this.source = new MachineSourceImpl(source.getType(), source.getLocation());
        }
        this.limits = new LimitsImpl(limits);
    }

