    private void registerChild(@NotNull WatchEvent.Kind kind, @NotNull Path pathToChild) {
        if (recursive && (kind == ENTRY_CREATE)) {
            try {
                if (Files.isDirectory(pathToChild, NOFOLLOW_LINKS)) {
                    registerAll(pathToChild);
                }
            } catch (IOException x) {
                //to do nothing
            }
        }
    }

