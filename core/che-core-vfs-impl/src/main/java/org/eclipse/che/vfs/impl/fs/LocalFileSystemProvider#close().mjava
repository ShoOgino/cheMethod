    @Override
    public void close() {
        final FSMountPoint mount = mountRef.remove();
        if (mount != null) {
            if (searcherProvider != null) {
                try {
                    final Searcher searcher = searcherProvider.getSearcher(mount, false);
                    if (searcher != null) {
                        searcher.close();
                    }
                } catch (ServerException e) {
                    LOG.error(e.getMessage(), e);
                }
            }
        }
        super.close();
    }

