    @PostConstruct
    public void start() {
        if (mappingFile.exists() && mappingFile.isFile()) {
            try {
                loadFromPropertiesFile(mappingFile);
            } catch (IOException e) {
                throw new IllegalStateException(
                        String.format("Unable load directory mapping from file %s. %s", mappingFile, e.getMessage()), e);
            }
        }
    }

