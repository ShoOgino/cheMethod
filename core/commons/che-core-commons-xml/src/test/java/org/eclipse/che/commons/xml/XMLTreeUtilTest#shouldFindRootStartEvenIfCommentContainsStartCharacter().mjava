    @Test
    public void shouldFindRootStartEvenIfCommentContainsStartCharacter() {
        final String src = "<?xml version=\"1.0\" encoding=\"UTF-8\"?>\n" +
                           "<!-- Comment < < -->" +
                           "<!-- Another < < comment -->" +
                           "<root></root>";

        int start = rootStart(src.getBytes());

        assertEquals(start, src.indexOf("<root>"));
    }

