    private void doStart() {
        try {
            while (true) {
                boolean active = readIfAvailable();
                if (isStopped) {
                    break;
                }

                try {
                    Thread.sleep(getTimeToSleep(active));
                } catch (InterruptedException ignored) {
                }
            }
        } catch (Exception e) {
            LOG.error(e.getMessage(), e);
        } finally {
            close();
        }
    }

