    @Override
    public void clear() {
        Set<Map.Entry<K, V>> entries = protectedSegment.entrySet();
        for (Map.Entry<K, V> entry : entries) {
            evict(entry.getKey(), entry.getValue());
        }
        entries = probationarySegment.entrySet();
        for (Map.Entry<K, V> entry : entries) {
            evict(entry.getKey(), entry.getValue());
        }
        protectedSegment.clear();
        probationarySegment.clear();
    }

