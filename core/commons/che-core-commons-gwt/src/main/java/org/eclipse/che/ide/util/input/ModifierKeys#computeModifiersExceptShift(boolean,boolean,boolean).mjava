    private static int computeModifiersExceptShift(boolean hasMeta, boolean hasCtrl, boolean hasAlt) {
        int modifiers = 0;

        if (hasAlt) {
            modifiers |= ALT;
        }

        if (UserAgent.isMac() && hasCtrl) {
            modifiers |= CTRL;
        }

        if (hasAction(hasCtrl, hasMeta)) {
            modifiers |= ACTION;
        }

        return modifiers;
    }

