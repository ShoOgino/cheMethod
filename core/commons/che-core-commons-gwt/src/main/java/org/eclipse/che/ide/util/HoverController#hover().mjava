    /**
     * Updates the state of the controller to indicate that the user is hovering
     * over one of the partner elements.
     */
    private void hover() {
        cancelUnhoverTimer();

        // Early exit if already hovering.
        if (isHovering) {
            return;
        }

        isHovering = true;
        if (hoverListener != null) {
            hoverListener.onHover();
        }
    }

