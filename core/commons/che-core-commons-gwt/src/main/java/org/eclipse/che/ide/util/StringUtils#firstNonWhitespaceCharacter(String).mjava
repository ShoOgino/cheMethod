    /**
     * @return first character in the string that is not a whitespace, or
     * {@code 0} if there is no such characters
     */
    public static char firstNonWhitespaceCharacter(String s) {
        for (int i = 0, n = s.length(); i < n; ++i) {
            char c = s.charAt(i);
            if (!isWhitespace(c)) {
                return c;
            }
        }
        return 0;
    }

