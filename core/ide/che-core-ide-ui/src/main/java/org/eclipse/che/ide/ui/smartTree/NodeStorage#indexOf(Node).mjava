    /**
     * Returns the item's index in it's parent including root level items.
     *
     * @param item
     * @return
     */
    public int indexOf(Node item) {
        Node parent = getParent(item);
        if (parent == null) {
            return getRootItems().indexOf(item);
        } else {
            return getChildren(parent).indexOf(item);
        }
    }

