    /** {@inheritDoc} */
    @Override
    public void updatePopup() {
        if (popupMenu == null || !popupMenu.isAttached()) {
            return;
        }
        this.hide();
        int top = getAbsoluteTop() + listHeader.getOffsetHeight();
        show(getAbsoluteLeft(), top, listHeader.getOffsetWidth());
    }

