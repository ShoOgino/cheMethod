    @Override
    public void setThemes(List<Theme> themes, String currentThemeId) {
        themeBox.clear();

        for (Theme t : themes) {
            themeBox.addItem(t.getDescription(), t.getId());
            if (t.getId().equals(currentThemeId)) {
                themeBox.setSelectedIndex(themes.indexOf(t));
            }
        }
    }

