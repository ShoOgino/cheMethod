    /** {@inheritDoc} */
    @Override
    public void onFileOperation(FileEvent event) {
        if (event.getOperationType() == CLOSE) {
            lastClosed = event.getFile();
        } else if (event.getOperationType() == OPEN && lastClosed != null && lastClosed.equals(event.getFile())) {
            lastClosed = null;
        }
    }

