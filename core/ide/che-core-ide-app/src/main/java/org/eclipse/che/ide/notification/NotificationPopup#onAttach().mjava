    /** {@inheritDoc} */
    @Override
    protected void onAttach() {
        boolean isOrWasAttached = isOrWasAttached();
        super.onAttach();

        if (!isOrWasAttached) {
            sinkEvents(ONCLICK | ONDBLCLICK | ONMOUSEOUT | ONMOUSEOVER);
            update();

            addStyleName(resources.notificationCss().notificationShowingAnimation());
        }
    }

