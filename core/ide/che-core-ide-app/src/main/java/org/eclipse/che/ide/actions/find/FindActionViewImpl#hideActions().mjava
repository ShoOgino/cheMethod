    @Override
    public void hideActions() {
        actions = new HashMap<>();
        actionsContainer.getElement().setInnerHTML("");

        layoutPanel.setWidgetHidden(actionsPanel, true);
        layoutPanel.setHeight("60px");

        if (isVisible()) {
            Scheduler.get().scheduleDeferred(new Scheduler.ScheduledCommand() {
                @Override
                public void execute() {
                    center();
                }
            });
        }
    }

