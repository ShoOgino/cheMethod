    /** Checks service availability. */
    public boolean isAvailable() {
        LOG.debug("Testing availability {}", baseUrl);
        try {
            return (requestFactory.fromUrl(baseUrl)
                                  .useOptionsMethod()
                                  .request()
                                  .as(getServiceDescriptorClass(), null) != null);
        } catch (Exception e) {
            LOG.warn(e.getLocalizedMessage());
            return false;
        }
    }

