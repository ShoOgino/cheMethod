  /** Closes all unclosed subconsumers. */
  @Override
  public void close() {
    if (isOpen) {
      lock.writeLock().lock();
      try {
        isOpen = false;
        for (LineConsumer lineConsumer : lineConsumers) {
          try {
            lineConsumer.close();
          } catch (IOException e) {
            LOG.error(
                String.format("An error occurred while closing the line consumer %s", lineConsumer),
                e);
          }
        }
      } finally {
        lock.writeLock().unlock();
      }
    }
  }

