    public JsonObject toJsonObject() {
        JsonObject request = new JsonObject();

        request.addProperty("jsonrpc", "2.0");
        request.addProperty("method", method);

        if (hasId()) {
            request.addProperty("id", id);
        }

        if (hasParams()) {
            request.add("params", params.toJsonElement());
        }

        return request;
    }

