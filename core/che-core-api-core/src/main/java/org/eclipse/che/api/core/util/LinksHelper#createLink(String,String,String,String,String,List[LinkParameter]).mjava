  public static Link createLink(
      String method,
      String href,
      String consumes,
      String produces,
      String rel,
      List<LinkParameter> params) {
    return DtoFactory.getInstance()
        .createDto(Link.class)
        .withMethod(method)
        .withHref(href)
        .withConsumes(consumes)
        .withProduces(produces)
        .withRel(rel)
        .withParameters(params);
  }

