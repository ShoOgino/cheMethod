    public <DTO> DTO request(
        Class<DTO> dtoInterface,
        int timeout,
        String url,
        String method,
        Object body,
        Pair<String, ?>... parameters)
        throws IOException, ServerException, UnauthorizedException, ForbiddenException,
            NotFoundException, ConflictException {
      final String str = requestString(timeout, url, method, body, parameters);
      if (dtoInterface != null) {
        return DtoFactory.getInstance().createDtoFromJson(str, dtoInterface);
      }
      return null;
    }

