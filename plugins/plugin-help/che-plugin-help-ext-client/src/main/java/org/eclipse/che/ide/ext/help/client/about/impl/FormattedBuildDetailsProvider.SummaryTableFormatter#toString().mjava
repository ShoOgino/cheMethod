    @Override
    public String toString() {
      StringBuilder sb = new StringBuilder();

      int[] columnWidths = columnWidths();

      rows.forEach(
          row -> {
            for (int column = 0; column < row.length; column++) {
              sb.append(Strings.padEnd(row[column], columnWidths[column] + 2, ' '));
            }
            sb.append('\n');
          });

      return sb.toString();
    }

