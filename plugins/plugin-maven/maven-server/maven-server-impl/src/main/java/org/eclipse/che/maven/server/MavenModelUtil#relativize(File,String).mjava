  private static String relativize(File basePath, String rawPath) {
    if (rawPath == null) {
      return null;
    }

    if (rawPath.isEmpty()) {
      return rawPath;
    }

    return rawPath.startsWith(File.separator)
        ? basePath.toURI().relativize(new File(rawPath).toURI()).getPath()
        : rawPath;
  }

