  public static MavenArtifact convertArtifact(Artifact artifact, File localRepository) {
    return new MavenArtifact(
        artifact.getGroupId(),
        artifact.getArtifactId(),
        artifact.getVersion(),
        artifact.getBaseVersion(),
        artifact.getType(),
        artifact.getClassifier(),
        artifact.getScope(),
        artifact.isOptional(),
        convertExtension(artifact),
        artifact.getFile(),
        localRepository,
        artifact.isResolved(),
        false);
  }

