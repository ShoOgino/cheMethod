    private <T> T perform(RunnableRemoteWithResult<T> runnable) {
        RemoteException exception = null;
        for (int i = 0; i < 2; i++) {
            try {
                return runnable.perform();
            } catch (RemoteException e) {
                exception = e;
                onError();
            }
        }
        throw new RuntimeException(exception);
    }

