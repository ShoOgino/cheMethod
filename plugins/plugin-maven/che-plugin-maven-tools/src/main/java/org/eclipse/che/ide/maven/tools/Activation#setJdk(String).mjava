  public Activation setJdk(String jdk) {
    this.jdk = jdk;
    if (!isNew()) {
      if (isNullOrEmpty(jdk)) {
        element.removeChild("jdk");
      } else if (element.hasSingleChild("jdk")) {
        element.getSingleChild("jdk").setText(jdk);
      } else {
        element.appendChild(createElement("jdk", jdk));
      }
    }
    return this;
  }

