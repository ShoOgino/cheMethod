  public Activation setFile(ActivationFile file) {
    this.file = file;
    if (!isNew()) {
      if (file == null) {
        element.removeChild("file");
      } else if (element.hasSingleChild("file")) {
        element.removeChild("file");
        element.appendChild(file.asXMLElement());
      } else {
        element.appendChild(file.asXMLElement());
      }
    }
    return this;
  }

