    public Activation setProperty(ActivationProperty property) {
        this.property = property;
        if (!isNew()) {
            if (property == null) {
                element.removeChild("property");
            } else if (element.hasSingleChild("property")) {
                element.removeChild("property");
                element.appendChild(property.asXMLElement());
            } else {
                element.appendChild(property.asXMLElement());
            }
        }
        return this;
    }

