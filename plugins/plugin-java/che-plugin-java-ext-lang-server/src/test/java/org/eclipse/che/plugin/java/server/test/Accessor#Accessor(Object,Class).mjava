  /**
   * Creates an accessor for the given <code>instance</code> and <code>clazz</code>. Only
   * non-inherited members of that particular class can be accessed.
   *
   * @param instance the instance
   * @param clazz the class
   */
  public Accessor(Object instance, Class clazz) {
    org.eclipse.core.runtime.Assert.isNotNull(instance);
    Assert.isNotNull(clazz);
    fInstance = instance;
    fClass = clazz;
  }

