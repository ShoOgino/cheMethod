    private static Javadoc getPackageJavadocNode(IJavaElement element, String cuSource) {
        CompilationUnit cu = createAST(element, cuSource);
        if (cu != null) {
            PackageDeclaration packDecl = cu.getPackage();
            if (packDecl != null) {
                return packDecl.getJavadoc();
            }
        }
        return null;
    }

