	public static IMethod[] getRelatedMethods(IMethod method, ReferencesInBinaryContext binaryRefs, IProgressMonitor pm,
											  WorkingCopyOwner owner) throws CoreException {
		try {
			if (!MethodChecks.isVirtual(method))
				return new IMethod[]{method};

			return new RippleMethodFinder2(method, binaryRefs).getAllRippleMethods(pm, owner);
		} finally {
			pm.done();
		}
	}

