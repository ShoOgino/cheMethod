  private static String getHTMLContent(IJarEntryResource jarEntryResource, String encoding)
      throws CoreException {
    InputStream in = jarEntryResource.getContents();
    try {
      return getContentsFromInputStream(in, encoding);
    } finally {
      if (in != null) {
        try {
          in.close();
        } catch (IOException e) {
          // ignore
        }
      }
    }
  }

