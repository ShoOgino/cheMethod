  private void nameToHTML(String name, StringBuffer buf) {
    for (int i = 0; i < name.length(); i++) {
      char ch = name.charAt(i);
      if (ch == '>') {
        buf.append("&gt;"); // $NON-NLS-1$
      } else if (ch == '<') {
        buf.append("&lt;"); // $NON-NLS-1$
      } else {
        buf.append(ch);
      }
    }
  }

