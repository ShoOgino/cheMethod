          }
        } catch (JavaModelException e) {
          JavaPlugin.log(e);
        }

        HTMLPrinter.addPageEpilog(buffer);
        info = buffer.toString();

        return new JavadocBrowserInformationControlInput(info);
      }
    }
    return null;
  }

