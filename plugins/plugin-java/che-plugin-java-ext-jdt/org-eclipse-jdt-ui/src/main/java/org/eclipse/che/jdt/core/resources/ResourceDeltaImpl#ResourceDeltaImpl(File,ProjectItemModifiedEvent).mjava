  public ResourceDeltaImpl(File workspace, ProjectItemModifiedEvent event) {
    this.workspace = workspace;
    path = event.getPath();

    switch (event.getType()) {
      case UPDATED:
        status |= CHANGED | CONTENT;
        break;
      case CREATED:
        status |= ADDED;
        break;
      case DELETED:
        status |= REMOVED;
        break;
      default:
    }
  }

