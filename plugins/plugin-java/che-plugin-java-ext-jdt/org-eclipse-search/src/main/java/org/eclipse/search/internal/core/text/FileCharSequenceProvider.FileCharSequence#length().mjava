    /* (non-Javadoc)
     * @see java.lang.CharSequence#length()
     */
    public int length() {
      if (fLength == null) {
        try {
          getBuffer(Integer.MAX_VALUE);
        } catch (IOException e) {
          throw new FileCharSequenceException(e);
        } catch (CoreException e) {
          throw new FileCharSequenceException(e);
        }
      }
      return fLength.intValue();
    }

