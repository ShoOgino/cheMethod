  /** Create and return a new tree element of the given type. */
  protected ResourceInfo newElement(int type) {
    ResourceInfo result = null;
    switch (type) {
      case IResource.FILE:
      case IResource.FOLDER:
        result = new ResourceInfo(type);
        break;
      case IResource.PROJECT:
        result = new ResourceInfo(type);
        break;
      case IResource.ROOT:
        result = new ResourceInfo(type);
        break;
    }

    return result;
  }

