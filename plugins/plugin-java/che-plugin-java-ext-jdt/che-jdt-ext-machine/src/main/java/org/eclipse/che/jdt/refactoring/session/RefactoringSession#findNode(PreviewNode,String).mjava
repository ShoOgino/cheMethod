    private PreviewNode findNode(PreviewNode node, String id) {
        if (node.getId().equals(id)) {
            return node;
        }

        PreviewNode[] children = node.getChildren();
        if (children != null) {
            PreviewNode found;
            for (PreviewNode child : children) {
                found = findNode(child, id);
                if (found != null) {
                    return found;
                }
            }
        }
        return null;
    }

