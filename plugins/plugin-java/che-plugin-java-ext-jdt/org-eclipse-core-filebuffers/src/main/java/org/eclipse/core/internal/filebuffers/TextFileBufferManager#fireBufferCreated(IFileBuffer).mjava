  protected void fireBufferCreated(final IFileBuffer buffer) {
    Iterator e = getFileBufferListenerIterator();
    while (e.hasNext()) {
      final IFileBufferListener l = (IFileBufferListener) e.next();
      SafeRunner.run(
          new SafeNotifier() {
            public void run() {
              l.bufferCreated(buffer);
            }
          });
    }
  }

