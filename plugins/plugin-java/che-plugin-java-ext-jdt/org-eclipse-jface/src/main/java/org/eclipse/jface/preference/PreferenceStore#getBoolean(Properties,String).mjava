  /**
   * Helper function: gets boolean for a given name.
   *
   * @param p
   * @param name
   * @return boolean
   */
  private boolean getBoolean(Properties p, String name) {
    String value = p != null ? p.getProperty(name) : null;
    if (value == null) {
      return BOOLEAN_DEFAULT_DEFAULT;
    }
    if (value.equals(TRUE)) {
      return true;
    }
    return false;
  }

