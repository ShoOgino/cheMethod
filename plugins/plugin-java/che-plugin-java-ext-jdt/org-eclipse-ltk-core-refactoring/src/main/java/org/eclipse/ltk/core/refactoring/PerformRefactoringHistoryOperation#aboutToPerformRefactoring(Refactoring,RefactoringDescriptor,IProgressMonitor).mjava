  /**
   * Hook method which is called when the specified refactoring is going to be executed.
   *
   * @param refactoring the refactoring about to be executed
   * @param descriptor the refactoring descriptor
   * @param monitor the progress monitor to use
   * @return a status describing the outcome of the initialization
   */
  protected RefactoringStatus aboutToPerformRefactoring(
      final Refactoring refactoring,
      final RefactoringDescriptor descriptor,
      final IProgressMonitor monitor) {
    Assert.isNotNull(refactoring);
    Assert.isNotNull(descriptor);
    return new RefactoringStatus();
  }

