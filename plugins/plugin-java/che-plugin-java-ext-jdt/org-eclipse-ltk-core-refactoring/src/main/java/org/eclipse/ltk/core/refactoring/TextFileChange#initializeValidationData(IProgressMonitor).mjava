  /** {@inheritDoc} */
  public void initializeValidationData(IProgressMonitor monitor) {
    if (monitor == null) monitor = new NullProgressMonitor();
    try {
      monitor.beginTask("", 1); //$NON-NLS-1$
      fValidationState = BufferValidationState.create(fFile);
    } finally {
      monitor.done();
    }
  }

