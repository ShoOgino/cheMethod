    @Nullable
    protected VirtualFile getPom(FolderEntry projectFolder) {
        try {
            final VirtualFileEntry pomFile = projectFolder.getChild("pom.xml");
            if (pomFile != null) {
                return pomFile.getVirtualFile();
            }
            return null;
        } catch (ForbiddenException | ServerException e) {
            return null;
        }
    }

