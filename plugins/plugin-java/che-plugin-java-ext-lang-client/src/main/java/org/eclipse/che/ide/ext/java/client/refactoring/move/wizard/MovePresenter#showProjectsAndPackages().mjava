  private void showProjectsAndPackages() {
    extensionService
        .getDestinations()
        .then(
            projects -> {
              view.setTreeOfDestinations(refactorInfo, projects);
              view.show(refactorInfo);
            })
        .catchError(
            error -> {
              notificationManager.notify(
                  locale.showPackagesError(), error.getMessage(), Status.FAIL, FLOAT_MODE);
            });
  }

