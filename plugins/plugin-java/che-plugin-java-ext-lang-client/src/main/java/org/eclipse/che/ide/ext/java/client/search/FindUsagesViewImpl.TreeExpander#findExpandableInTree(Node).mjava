    private Node findExpandableInTree(Node node) {
      if (canExpand(node)) {
        return node;
      }
      List<Node> children = tree.getNodeStorage().getChildren(node);
      for (Node child : children) {
        Node descendant = findExpandableInTree(child);
        if (descendant != null) {
          return descendant;
        }
      }
      return null;
    }

