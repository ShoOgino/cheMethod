  private Promise<Void> updateEditors(List<EditorPartPresenter> editorsToUpdate) {
    return promises.create(
        callback ->
            Scheduler.get()
                .scheduleDeferred(
                    () -> {
                      editorsToUpdate.forEach(
                          editor -> updateFileContent(editor.getEditorInput().getFile()));

                      setActiveEditor();
                      callback.onSuccess(null);
                    }));
  }

