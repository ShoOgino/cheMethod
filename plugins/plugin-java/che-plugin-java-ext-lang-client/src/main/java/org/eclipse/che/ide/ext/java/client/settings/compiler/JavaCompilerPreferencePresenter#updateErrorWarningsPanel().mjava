  private void updateErrorWarningsPanel() {
    preferencesManager
        .loadPreferences()
        .then(
            properties -> {
              options.forEach(this::provideWidget);
            })
        .catchError(
            error -> {
              notificationManagerProvider
                  .get()
                  .notify(
                      locale.unableToLoadJavaCompilerErrorsWarningsSettings(), FAIL, FLOAT_MODE);
            });
  }

