    /* @see java.lang.Object#toString() */
    public final String toString() {
      String bal;
      switch (balance) {
        case 0:
          bal = "="; // $NON-NLS-1$
          break;
        case 1:
          bal = "+"; // $NON-NLS-1$
          break;
        case 2:
          bal = "++"; // $NON-NLS-1$
          break;
        case -1:
          bal = "-"; // $NON-NLS-1$
          break;
        case -2:
          bal = "--"; // $NON-NLS-1$
          break;
        default:
          bal = Byte.toString(balance);
      }
      return "["
          + offset
          + "+"
          + pureLength()
          + "+"
          + delimiter.length()
          + "|"
          + line
          + "|"
          + bal
          + "]"; // $NON-NLS-1$ //$NON-NLS-2$ //$NON-NLS-3$ //$NON-NLS-4$ //$NON-NLS-5$
      // //$NON-NLS-6$
    }

