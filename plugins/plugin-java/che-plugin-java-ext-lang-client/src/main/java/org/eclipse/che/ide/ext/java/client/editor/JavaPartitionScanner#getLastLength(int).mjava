    private static final int getLastLength(int last) {
        switch (last) {
            default:
                return -1;

            case NONE:
                return 0;

            case CARRIAGE_RETURN:
            case BACKSLASH:
            case SLASH:
            case STAR:
                return 1;

            case SLASH_STAR:
                return 2;

            case SLASH_STAR_STAR:
                return 3;
        }
    }

