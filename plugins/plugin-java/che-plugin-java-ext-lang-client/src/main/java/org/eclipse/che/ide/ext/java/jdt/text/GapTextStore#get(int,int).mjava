  /* @see org.eclipse.jface.text.ITextStore#get(int, int) */
  public final String get(int offset, int length) {
    if (fGapStart <= offset) return new String(fContent, offset + gapSize(), length);

    final int end = offset + length;

    if (end <= fGapStart) return new String(fContent, offset, length);

    StringBuffer buf = new StringBuffer(length);
    buf.append(fContent, offset, fGapStart - offset);
    buf.append(fContent, fGapEnd, end - fGapStart);
    return buf.toString();
  }

