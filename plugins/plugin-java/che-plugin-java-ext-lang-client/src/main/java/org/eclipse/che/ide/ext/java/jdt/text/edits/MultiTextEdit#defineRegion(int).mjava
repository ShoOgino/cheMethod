    void defineRegion(int parentOffset) {
        if (fDefined)
            return;
        if (hasChildren()) {
            Region region = getCoverage(getChildren());
            internalSetOffset(region.getOffset());
            internalSetLength(region.getLength());
        } else {
            internalSetOffset(parentOffset);
            internalSetLength(0);
        }
        fDefined = true;
    }

