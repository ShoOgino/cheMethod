    /** {@inheritDoc} */
    @Override
    public void revertChanges() {
        name = firstNonNull(preferencesManager.getValue(COMMITTER_NAME), DEFAULT_COMMITTER_NAME);
        email = firstNonNull(preferencesManager.getValue(COMMITTER_EMAIL), DEFAULT_COMMITTER_EMAIL);

        view.setName(name);
        view.setEmail(email);

        dirty = false;
    }

