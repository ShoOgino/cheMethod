  /**
   * determining git status of changed file.
   *
   * @param status String representation of git status
   */
  public static Status defineStatus(String status) {
    switch (status) {
      case "M":
        return MODIFIED;
      case "D":
        return DELETED;
      case "A":
        return ADDED;
      case "C":
        return COPIED;
      case "U":
        return UPDATED_BUT_UNMERGED;
    }
    return UNMODIFIED;
  }

