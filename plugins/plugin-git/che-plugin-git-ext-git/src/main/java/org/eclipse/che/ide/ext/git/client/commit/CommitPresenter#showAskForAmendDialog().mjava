  private void showAskForAmendDialog() {
    dialogFactory
        .createConfirmDialog(
            locale.commitTitle(),
            locale.commitNothingToCommitMessageText(),
            locale.buttonYes(),
            locale.buttonNo(),
            () -> {
              view.setValueToAmendCheckBox(true);
              view.setEnablePushAfterCommitCheckBox(false);
              setAmendCommitMessage();
              show(null);
            },
            null)
        .show();
  }

