  @Path("revisions")
  @POST
  @Consumes(MediaType.APPLICATION_JSON)
  @Produces({MediaType.APPLICATION_JSON, MediaType.TEXT_PLAIN})
  public GetRevisionsResponse getRevisions(final GetRevisionsRequest request)
      throws ApiException, IOException {
