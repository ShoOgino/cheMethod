    private void configureVfsExcludeFilter() {
        newSetBinder(binder(), PathMatcher.class, Names.named("vfs.index_filter_matcher"))
                .addBinding()
                .toInstance(path -> {
                    for (Path pathElement : path) {
                        if (pathElement == null || "node_modules".equals(pathElement.toString())) {
                            return true;
                        }
                    }
                    return false;
                });
    }

