  public PromiseMocker<T> applyOnThenOperation(T value) {
    when(promise.then(org.mockito.ArgumentMatchers.<Operation<T>>any()))
        .then(
            new FunctionAnswer<Operation<T>, Promise<T>>(
                op -> {
                  try {
                    op.apply(value);
                  } catch (Exception e) {
                    e.printStackTrace();
                  }
                  return promise;
                }));
    return this;
  }

