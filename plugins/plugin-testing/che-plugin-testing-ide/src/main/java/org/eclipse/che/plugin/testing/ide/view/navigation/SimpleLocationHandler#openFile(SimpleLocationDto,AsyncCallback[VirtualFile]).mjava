  /**
   * Tries to open provided location. Supports callback if there is a need.
   *
   * @param location
   * @param callback
   */
  public void openFile(
      final SimpleLocationDto location, final AsyncCallback<VirtualFile> callback) {
    tryFindFileInWorkspace(
        location,
        new AsyncCallback<VirtualFile>() {
          @Override
          public void onSuccess(VirtualFile virtualFile) {
            if (callback != null) callback.onSuccess(virtualFile);
          }

          @Override
          public void onFailure(Throwable caught) {
            if (callback != null) callback.onFailure(caught);
          }
        });
  }

