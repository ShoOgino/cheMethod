    /**
     * Authorizes on GitHub.
     */
    private void authorize() {
        showProcessing(true);
        gitHubAuthenticator.authorize(new AsyncCallback<OAuthStatus>() {
            @Override
            public void onFailure(Throwable caught) {
                showProcessing(false);
            }

            @Override
            public void onSuccess(OAuthStatus result) {
                showProcessing(false);
                getUserRepos();
            }
        });
    }

