    @Test
    public void shouldReturnEmptyEncodedJsonIfNoRegistryConfigured() {
        when(initialAuthConfig.getAuthConfigs()).thenReturn(emptyAuthConfigs);

        String base64HeaderValue = authResolver.getXRegistryConfigHeaderValue(null);

