    private Map<String, ServerConfImpl> serversToMap(Stream<ServerConf> serverConfigs) {
        return serverConfigs.collect(toMap(srvConf -> srvConf.getPort().contains("/") ?
                                                      srvConf.getPort() :
                                                      srvConf.getPort() + "/tcp",
                                           ServerConfImpl::new));
    }

