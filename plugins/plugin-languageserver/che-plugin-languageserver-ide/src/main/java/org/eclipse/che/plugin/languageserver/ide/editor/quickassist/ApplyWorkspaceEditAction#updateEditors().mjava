  private Promise<Void> updateEditors() {
    return promises.create(
        callback ->
            Scheduler.get()
                .scheduleDeferred(
                    () -> {
                      editorAgent
                          .getOpenedEditors()
                          .forEach(
                              editor -> {
                                updateFileContent(editor.getEditorInput().getFile());
                                editor.doSave();
                              });
                      callback.onSuccess(null);
                    }));
  }

