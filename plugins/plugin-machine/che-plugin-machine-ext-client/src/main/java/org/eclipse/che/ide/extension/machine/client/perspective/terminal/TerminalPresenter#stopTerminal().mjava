    /**
     * Sends 'exit' command on server side to stop terminal.
     */
    public void stopTerminal() {
        if (isTerminalConnected) {
            Jso jso = Jso.create();
            jso.addField("type", "data");
            jso.addField("data", "exit\n");
            socket.send(jso.serialize());
        }
    }

