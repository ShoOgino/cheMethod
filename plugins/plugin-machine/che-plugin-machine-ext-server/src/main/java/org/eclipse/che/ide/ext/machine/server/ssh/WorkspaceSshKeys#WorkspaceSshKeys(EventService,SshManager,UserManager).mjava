  /**
   * Default injection by using event service and ssh manager.
   *
   * @param eventService used to get CREATE/DELETE events for workspace
   * @param sshManager used to generate/remove default ssh keys
   */
  @Inject
  public WorkspaceSshKeys(
      final EventService eventService, final SshManager sshManager, final UserManager userManager) {
    this.eventService = eventService;
    this.sshManager = sshManager;
    this.userManager = userManager;
  }

