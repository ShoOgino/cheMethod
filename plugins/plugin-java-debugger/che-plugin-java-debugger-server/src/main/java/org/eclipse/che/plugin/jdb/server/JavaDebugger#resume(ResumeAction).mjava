    @Override
    public void resume(ResumeAction action) throws DebuggerException {
        lock.lock();
        try {
            invalidateCurrentThread();
            vm.resume();
            LOG.debug("Resume VM");
        } catch (VMCannotBeModifiedException e) {
            throw new DebuggerException(e.getMessage(), e);
        } finally {
            lock.unlock();
        }
    }

