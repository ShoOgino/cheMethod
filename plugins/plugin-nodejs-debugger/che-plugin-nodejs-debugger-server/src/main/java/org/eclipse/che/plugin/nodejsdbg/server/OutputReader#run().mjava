  @Override
  public void run() {
    try {
      InputStream in = getInputStream();
      if (in != null) {
        noResponseTimes = 0;
        proceedResponse(in);
      } else {
        noResponseTimes++;
        checkConnectivityState();
      }
    } catch (IOException e) {
      LOG.error(e.getMessage(), e);
    }
  }

