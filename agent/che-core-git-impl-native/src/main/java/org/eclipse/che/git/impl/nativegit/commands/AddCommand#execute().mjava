    /**
     * @see GitCommand#execute()
     */
    @Override
    public Void execute() throws GitException {
        if (filePattern == null) {
            throw new GitException("No file pattern was set.");
        }
        reset();
        commandLine.add("add");
        for (String line : filePattern) {
            commandLine.add(line);
        }
        if (update) {
            commandLine.add("--update");
        }
        start();
        return null;
    }

