        VirtualFile folder1 = virtualFileSystem.getRoot().createFolder("folder1/a/b");
        VirtualFile folder2 = virtualFileSystem.getRoot().createFolder("folder2");
        folder1.createFile("xxx.txt", TEST_CONTENT[2]);
