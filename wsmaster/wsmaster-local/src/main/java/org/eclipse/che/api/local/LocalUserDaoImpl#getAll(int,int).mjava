    @Override
    public Page<UserImpl> getAll(int maxItems, int skipCount) throws ServerException {
        return new Page<>(users.values()
                               .stream()
                               .skip(skipCount)
                               .limit(maxItems)
                               .map(LocalUserDaoImpl::erasePassword)
                               .collect(Collectors.toCollection(LinkedHashSet::new)),
                          skipCount,
                          maxItems,
                          users.size());
    }

