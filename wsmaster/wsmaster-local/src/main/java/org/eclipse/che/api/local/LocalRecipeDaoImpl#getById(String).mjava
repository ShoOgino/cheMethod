    @Override
    public ManagedRecipe getById(String id) throws NotFoundException {
        lock.readLock().lock();
        try {
            final ManagedRecipe recipe = recipes.get(id);
            if (recipe == null) {
                throw new NotFoundException(format("Recipe with id %s was not found", id));
            }
            return recipe;
        } finally {
            lock.readLock().unlock();
        }
    }

