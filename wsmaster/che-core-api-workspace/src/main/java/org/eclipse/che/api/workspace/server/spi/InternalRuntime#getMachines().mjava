    @Override
    public Map<String, ? extends Machine> getMachines() {
        return getInternalMachines()
                .entrySet()
                .stream()
                .collect(toMap(Map.Entry::getKey,
                               e -> new MachineImpl(e.getValue().getProperties(),
                                                    rewriteExternalServers(e.getValue().getServers()))));
    }

