    @Override
    public void run() {
      if (isTimedOut()) {
        reportFuture.completeExceptionally(
            new InfrastructureException(
                String.format(
                    "Server '%s' in machine '%s' not available.", serverRef, machineName)));
      } else if (isAvailable()) {
        reportFuture.complete(serverRef);
      } else {
        timer.schedule(new ServerCheckingTask(), period);
      }
    }

