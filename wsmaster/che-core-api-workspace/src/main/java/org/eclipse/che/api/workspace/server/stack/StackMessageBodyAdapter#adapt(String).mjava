    @Override
    protected String adapt(String body) {
        if (!isOldFormat(body)) {
            return body;
        }
        final JsonElement stackEl = new JsonParser().parse(body);
        if (!stackEl.isJsonObject()) {
            return body;
        }
        stackJsonAdapter.adaptModifying(stackEl.getAsJsonObject());
        return stackEl.toString();
    }

