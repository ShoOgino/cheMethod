        config.getEnvironments()
              .get(0)
              .getMachineConfigs()
              .get(0)
              .withSource(newDto(MachineSourceDto.class).withType("dockerfile").withLocation("ftp://localhost"));

        wsValidator.validateConfig(config);
    }

