    /**
     * Converts {@link User} to {@link UserDto}.
     */
    public static UserDto asDto(User user) {
        return DtoFactory.getInstance().createDto(UserDto.class)
                         .withId(user.getId())
                         .withEmail(user.getEmail())
                         .withName(user.getName())
                         .withAliases(user.getAliases())
                         .withPassword("<none>");
    }

