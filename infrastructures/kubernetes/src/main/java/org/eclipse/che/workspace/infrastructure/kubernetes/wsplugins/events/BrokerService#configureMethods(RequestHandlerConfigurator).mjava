  @Inject
  public void configureMethods(RequestHandlerConfigurator requestHandler) {
    requestHandler
        .newConfiguration()
        .methodName("broker/statusChanged")
        .paramsAsDto(BrokerResultEvent.class)
        .noResult()
        .withConsumer(this::handle);

    requestHandler
        .newConfiguration()
        .methodName("broker/result")
        .paramsAsDto(BrokerResultEvent.class)
        .noResult()
        .withConsumer(this::handle);
  }

