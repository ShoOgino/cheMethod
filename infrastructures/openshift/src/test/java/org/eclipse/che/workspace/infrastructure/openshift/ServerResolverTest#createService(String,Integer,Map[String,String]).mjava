    private Service createService(String name, Integer port, Map<String, String> selector) {
        return new ServiceBuilder().withNewMetadata()
                                   .withName(name)
                                   .endMetadata()
                                   .withNewSpec()
                                   .withSelector(selector)
                                   .withPorts(new ServicePortBuilder().withPort(port)
                                                                      .withNewTargetPort()
                                                                      .withIntVal(port)
                                                                      .endTargetPort()
                                                                      .build())
                                   .endSpec()
                                   .build();
    }

