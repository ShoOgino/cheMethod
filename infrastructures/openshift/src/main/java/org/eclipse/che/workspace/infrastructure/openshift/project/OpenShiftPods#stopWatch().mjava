  /** Stops watching the pods inside OpenShift namespace. */
  void stopWatch() {
    try {
      if (watch != null) {
        watch.close();
      }
    } catch (KubernetesClientException ex) {
      LOG.error(
          "Failed to stop pod watcher for namespace '{}' cause '{}'", namespace, ex.getMessage());
    }
    handlers.clear();
  }

