    @Inject
    public ExtraVolumesProvisioner(@Named("che.workspace.volume") String volume) {
        if (isNullOrEmpty(volume)) {
            this.extraVolumes = Collections.emptySet();
        } else {
            this.extraVolumes = Arrays.stream(volume.split(";"))
                                      .filter(s -> !s.isEmpty())
                                      .collect(toSet());
        }
    }

