  @Override
  public void provision(
      InternalEnvironment envConfig, DockerEnvironment internalEnv, RuntimeIdentity identity)
      throws InfrastructureException {

    if (value != null) {
      for (DockerContainerConfig containerConfig : internalEnv.getContainers().values()) {
        containerConfig
            .getEnvironment()
            .put(DockerConnectorConfiguration.DOCKER_HOST_PROPERTY, value);
      }
    }
  }

