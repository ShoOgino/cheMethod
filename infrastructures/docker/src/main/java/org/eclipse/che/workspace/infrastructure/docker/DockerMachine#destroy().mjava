    public void destroy() {
        // node unbind
        try {
            docker.removeContainer(RemoveContainerParams.create(this.container)
                                                        .withRemoveVolumes(true)
                                                        .withForce(true));

            docker.removeImage(RemoveImageParams.create(this.image).withForce(false));
        } catch (IOException e) {
            LOG.error(e.getLocalizedMessage(), e);
        }
    }

