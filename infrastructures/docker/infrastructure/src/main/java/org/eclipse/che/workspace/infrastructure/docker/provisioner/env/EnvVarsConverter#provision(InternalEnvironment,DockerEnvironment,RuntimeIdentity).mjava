  @Override
  public void provision(
      InternalEnvironment environment, DockerEnvironment internalEnv, RuntimeIdentity identity)
      throws InfrastructureException {

    environment
        .getMachines()
        .forEach(
            (machineName, machineConfig) ->
                internalEnv
                    .getContainers()
                    .get(machineName)
                    .getEnvironment()
                    .putAll(machineConfig.getEnv()));
  }

