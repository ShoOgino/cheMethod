  @Inject
  public ExtraHostsProvisioner(@Nullable @Named(PROPERTY) String extraHosts) {
    if (extraHosts == null || extraHosts.isEmpty()) {
      this.extraHosts = Collections.emptyList();
    } else {
      this.extraHosts =
          Arrays.stream(extraHosts.split(" *, *"))
              .filter(host -> !host.isEmpty())
              .collect(toList());
    }
  }

