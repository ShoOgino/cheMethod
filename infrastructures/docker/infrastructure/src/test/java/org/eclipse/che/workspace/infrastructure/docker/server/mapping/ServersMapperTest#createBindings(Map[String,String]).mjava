  private static Map<String, List<PortBinding>> createBindings(Map<String, String> bindings) {
    return bindings
        .entrySet()
        .stream()
        .collect(
            toMap(
                Map.Entry::getKey,
                entry -> {
                  String[] split = entry.getValue().split(":");
                  PortBinding pb = new PortBinding(split[0], split[1]);
                  return singletonList(pb);
                }));
  }

