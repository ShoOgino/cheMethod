  @PreDestroy
  @Override
  public void delete() {
    future.thenAccept(
        aVoid -> {
          try {
            workspaceServiceClient.delete(name, owner.getName());
            LOG.info("Workspace name='{}', id='{}' removed", name, getId());
          } catch (Exception e) {
            throw new RuntimeException(format("Failed to remove workspace '%s'", this), e);
          }
        });
  }

