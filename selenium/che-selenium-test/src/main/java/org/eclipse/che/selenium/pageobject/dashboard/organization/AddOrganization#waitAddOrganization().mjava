  public void waitAddOrganization() {
    WaitUtils.sleepQuietly(1);
    new WebDriverWait(seleniumWebDriver, LOAD_PAGE_TIMEOUT_SEC)
        .until(
            (WebDriver driver) ->
                driver
                    .findElement(By.xpath(Locators.ADD_ORGANIZATION_TITLE))
                    .getText()
                    .equals(NEW_ORGANIZATION));
  }

