  /** wait opening the widget */
  public void waitOpen() {
    new WebDriverWait(seleniumWebDriver, REDRAW_UI_ELEMENTS_TIMEOUT_SEC)
        .until(
            ExpectedConditions.visibilityOfAllElements(
                Arrays.asList(
                    invokeFactoryBtn,
                    configureFactoryBtn,
                    createFactoryBtn,
                    nameFactoryField,
                    factoryField,
                    closeBtnID)));
  }

