  /** wait expected text */
  public void waitInputNameContains(final String expectedText) {
    new WebDriverWait(seleniumWebDriver, 3)
        .until(
            (ExpectedCondition<Boolean>)
                webDriver ->
                    seleniumWebDriver
                        .findElement(By.id(INPUT))
                        .getAttribute("value")
                        .contains(expectedText));
  }

