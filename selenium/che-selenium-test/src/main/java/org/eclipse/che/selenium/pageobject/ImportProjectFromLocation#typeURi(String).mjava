  /**
   * type user uri into URL: field
   *
   * @param uri
   */
  public void typeURi(String uri) {
    new WebDriverWait(seleniumWebDriver, REDRAW_UI_ELEMENTS_TIMEOUT_SEC)
        .until(ExpectedConditions.visibilityOf(urlField))
        .clear();
    loader.waitOnClosed();
    urlField.sendKeys(uri);
  }

