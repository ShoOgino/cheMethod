  /** Deletes all editor's content by "Ctrl"+"A" keys pressing and "Delete" key pressing. */
  public void deleteAllContent() {
    actionsFactory
        .createAction(seleniumWebDriver)
        .keyDown(CONTROL)
        .sendKeys("a")
        .keyUp(CONTROL)
        .sendKeys(DELETE)
        .perform();

    waitEditorIsEmpty();
  }

