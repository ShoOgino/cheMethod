  private void waitMacroCommandIsSelected(String item) {
    webDriverWaitFactory
        .get()
        .until(
            (ExpectedCondition<Boolean>)
                driver -> {
                  return waitVisibilityAndGetMacro(item)
                      .getCssValue("background-color")
                      .contains("rgba(215, 215, 215, 0.2)");
                });
  }

