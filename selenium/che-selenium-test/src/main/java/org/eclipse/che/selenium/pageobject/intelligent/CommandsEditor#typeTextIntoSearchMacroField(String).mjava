  public void typeTextIntoSearchMacroField(String text) {
    redrawWait
        .until(visibilityOfElementLocated(By.xpath(CommandsLocators.COMMAND_MACROS_INPUT_FIELD)))
        .click();
    redrawWait
        .until(visibilityOfElementLocated(By.xpath(CommandsLocators.COMMAND_MACROS_INPUT_FIELD)))
        .clear();
    redrawWait
        .until(visibilityOfElementLocated(By.xpath(CommandsLocators.COMMAND_MACROS_INPUT_FIELD)))
        .sendKeys(text);
  }

