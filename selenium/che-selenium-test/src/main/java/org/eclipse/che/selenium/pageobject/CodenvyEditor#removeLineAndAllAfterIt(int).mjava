  /**
   * remove line and everything after it
   *
   * @param numberOfLine number of line
   */
  public void removeLineAndAllAfterIt(int numberOfLine) {
    setCursorToLine(numberOfLine);
    actionsFactory
        .createAction(seleniumWebDriver)
        .keyDown(CONTROL)
        .keyDown(SHIFT)
        .sendKeys(END)
        .keyUp(CONTROL)
        .keyUp(SHIFT)
        .sendKeys(DELETE)
        .perform();
  }

