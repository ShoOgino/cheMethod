  public void waitYellowNode(String path) {
    loadPageTimeout.until(
        visibilityOfElementLocated(
            By.xpath(
                format(
                    "//div[@id='gwt-debug-projectTree']//div[@path='/%s']/descendant::div[@style='%s']",
                    path, "color: #e0b91d;"))));
  }

