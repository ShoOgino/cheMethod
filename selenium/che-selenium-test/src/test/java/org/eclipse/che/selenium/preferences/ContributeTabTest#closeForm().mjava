  @AfterMethod
  public void closeForm() {
    if (askDialog.isOpened()) {
      askDialog.confirmAndWaitClosed();
    }

    if (preferences.isPreferencesFormOpened()) {
      preferences.clickOnCloseButton();
    }

    if (askDialog.isOpened()) {
      askDialog.confirmAndWaitClosed();
    }

    preferences.waitPreferencesFormIsClosed();
  }

