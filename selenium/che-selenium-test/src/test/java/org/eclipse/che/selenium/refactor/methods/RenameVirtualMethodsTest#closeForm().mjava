  @AfterMethod
  public void closeForm() {
    try {
      if (refactor.isWidgetOpened()) {
        loader.waitOnClosed();
        try {
          refactor.clickCancelButtonRefactorForm();
        } catch (Exception ex) {
          ex.printStackTrace();
          ide.driver().navigate().refresh();
        }
      }
      editor.closeAllTabs();
    } catch (Exception e) {
      LOG.error(e.getLocalizedMessage(), e);
    }
  }

