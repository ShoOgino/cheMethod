    newWorkspace.clickOnCreateButtonAndOpenInIDE();

    dashboard.waitNotificationIsClosed();
    seleniumWebDriverHelper.switchToIdeFrameAndWaitAvailability();

    projectExplorer.waitProjectExplorer();
    terminal.waitTerminalTab(60);
  }

