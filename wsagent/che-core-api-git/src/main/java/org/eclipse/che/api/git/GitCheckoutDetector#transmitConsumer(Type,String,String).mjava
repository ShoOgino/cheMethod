  private Consumer<String> transmitConsumer(Type type, String name, String project) {
    return id ->
        transmitter
            .newRequest()
            .endpointId(id)
            .methodName(OUTGOING_METHOD)
            .paramsAsDto(
                newDto(GitCheckoutEventDto.class)
                    .withName(name)
                    .withType(type)
                    .withProjectName(project))
            .sendAndSkipResult();
  }

