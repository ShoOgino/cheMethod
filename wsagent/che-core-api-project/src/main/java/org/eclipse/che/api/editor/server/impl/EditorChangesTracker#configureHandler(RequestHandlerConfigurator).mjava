  @Inject
  public void configureHandler(RequestHandlerConfigurator configurator) {
    configurator
        .newConfiguration()
        .methodName(INCOMING_METHOD)
        .paramsAsDto(EditorChangesDto.class)
        .resultAsBoolean()
        .withBiFunction(
            (endpointId, changes) -> {
              editorWorkingCopyManager.onEditorContentUpdated(endpointId, changes);
              return true;
            });
  }

