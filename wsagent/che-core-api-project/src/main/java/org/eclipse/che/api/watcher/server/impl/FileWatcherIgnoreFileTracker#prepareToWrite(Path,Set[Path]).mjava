  private Set<String> prepareToWrite(Path projectPath, Set<Path> pathsToExclude) {
    return pathsToExclude
        .stream()
        .map(
            pathToExclude ->
                pathToExclude.equals(projectPath)
                    ? "/"
                    : projectPath.relativize(pathToExclude).toString())
        .collect(toSet());
  }

