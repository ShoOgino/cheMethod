  private File getMetadataIoFile(Path virtualFilePath) {
    Path metadataFilePath;
    if (virtualFilePath.isRoot()) {
      metadataFilePath =
          virtualFilePath.newPath(".vfs", "props", virtualFilePath.getName() + "_props");
    } else {
      metadataFilePath =
          virtualFilePath
              .getParent()
              .newPath(".vfs", "props", virtualFilePath.getName() + "_props");
    }
    return new File(testDirectory, toIoPath(metadataFilePath));
  }

