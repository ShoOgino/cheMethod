  @AfterMethod
  public void tearDown() {
    rootDir.deleteOnExit();
    srcDir.deleteOnExit();
    dstDir.deleteOnExit();

    if (file != null) {
      file.deleteOnExit();
    }

    if (srcFile != null) {
      srcFile.deleteOnExit();
    }

    if (dstFile != null) {
      dstFile.deleteOnExit();
    }
  }

