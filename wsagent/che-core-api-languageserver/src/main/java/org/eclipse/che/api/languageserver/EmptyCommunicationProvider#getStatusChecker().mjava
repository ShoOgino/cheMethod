  @Override
  public StatusChecker getStatusChecker() {
    if (statusChecker == null) {
      LOG.debug("Status checker is null, initializing with default status checker");
      statusChecker =
          new StatusChecker() {
            @Override
            public boolean isAlive() {
              return true;
            }

            @Override
            public String getCause() {
              return null;
            }
          };
    }
    return statusChecker;
  }

