  @Inject
  private void subscribe(EventService eventService, RequestTransmitter requestTransmitter) {
    eventService.subscribe(
        event ->
            endpointIds.forEach(
                endpointId ->
                    requestTransmitter
                        .newRequest()
                        .endpointId(endpointId)
                        .methodName("window/showMessage")
                        .paramsAsDto(new MessageParamsDto(event))
                        .sendAndSkipResult()),
        MessageParams.class);
  }

