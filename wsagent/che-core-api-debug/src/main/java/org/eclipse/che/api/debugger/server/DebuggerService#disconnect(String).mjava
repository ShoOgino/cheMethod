  @DELETE
  @Path("{id}")
  public void disconnect(@PathParam("id") String sessionId) throws DebuggerException {
    Debugger debugger;
    try {
      debugger = debuggerManager.getDebugger(sessionId);
    } catch (DebuggerNotFoundException e) {
      // probably already disconnected
      return;
    }

    debugger.disconnect();
  }

