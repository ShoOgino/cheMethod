    /** Handle browser's events. */
    @Override
    public void onBrowserEvent(Event event) {
      if (!enabled) {
        return;
      }

      switch (DOM.eventGetType(event)) {
        case Event.ONMOUSEOVER:
          onMouseOver();
          break;

        case Event.ONMOUSEOUT:
          onMouseOut();
          break;

        case Event.ONMOUSEDOWN:
          if (event.getButton() == Event.BUTTON_LEFT) {
            onMouseDown();
          }
          break;

        case Event.ONCLICK:
          onMouseClick();
          break;
      }
    }

