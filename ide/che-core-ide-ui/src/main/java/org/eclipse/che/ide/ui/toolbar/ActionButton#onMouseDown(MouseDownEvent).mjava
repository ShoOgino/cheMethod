    /** Mouse Down handler. */
    @Override
    public void onMouseDown(MouseDownEvent event) {
        if (!enabled) {
            return;
        }

        if (selected) {
            panel.setStyleName(toolbarResources.toolbar().iconButtonPanelSelectedDown());
        } else {
            panel.setStyleName(toolbarResources.toolbar().iconButtonPanelDown());
        }
    }

