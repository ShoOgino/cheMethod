    public boolean loadChildren(Node parent, boolean reloadExpandedChild) {
        //we don't need to load children for leaf nodes
        if (parent.isLeaf()) {
            return false;
        }

        if (childRequested.containsKey(parent)) {
            return false;
        }

        childRequested.put(parent, reloadExpandedChild);
        return _load(parent);
    }

