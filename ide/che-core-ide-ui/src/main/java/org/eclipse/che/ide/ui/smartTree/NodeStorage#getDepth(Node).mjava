  /**
   * Gets the depth of the given element in the tree, where 1 indicates that it is a root element of
   * the tree.
   *
   * @param child
   * @return
   */
  public int getDepth(Node child) {
    int depth = 0;
    while (child != null) {
      depth++;
      child = getParent(child);
    }
    return depth;
  }

