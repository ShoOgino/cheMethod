  private void activateWindow(Window window) {
    if (activeWindow == window || window == null) {
      return;
    }

    activeWindow = window;
    windowStack.forEach(
        w -> {
          if (w != window) {
            w.setActive(false);
          }
        });
    window.setActive(true);
    window.setZIndex(DomUtils.incrementAndGetTopZIndex(1));

    focus(window);
  }

