  private void handleViewEvents() {
    view.setDelegate(
        new ViewEvents() {
          @Override
          public void onEscapeKey() {
            if (hideOnEscapeEnabled && !blocked) {
              Window.this.onClose();
            }
          }

          @Override
          public void onClose() {
            if (!blocked) {
              Window.this.onClose();
            }
          }

          @Override
          public void onEnterKey() {
            onEnterClicked();
          }
        });
  }

