  public <B> PromiseMocker<T> applyOnThenFunction(T value) {
    when(promise.then(org.mockito.ArgumentMatchers.<Function<T, B>>any()))
        .then(
            new FunctionAnswer<Function<T, B>, Promise<T>>(
                function -> {
                  try {
                    function.apply(value);
                  } catch (Exception e) {
                    e.printStackTrace();
                  }
                  return promise;
                }));
    return this;
  }

