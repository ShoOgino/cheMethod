    public static Matcher or(final Matcher... matchers) {
      return new Matcher() {
        @Override
        public List<Match> match(String word, String wordToMatch) {
          for (Matcher matcher : matchers) {
            List<Match> matches = matcher.match(word, wordToMatch);
            if (matches != null) {
              return matches;
            }
          }

          return null;
        }
      };
    }

