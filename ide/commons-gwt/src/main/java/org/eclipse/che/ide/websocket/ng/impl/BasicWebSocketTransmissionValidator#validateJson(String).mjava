    private void validateJson(String message) {
        boolean error = false;

        try {
            JSONParser.parseStrict(message);
        } catch (Exception e) {
            error = true;
        }

        if (error) {
            logError("Web socket transmission message is not a valid json");
        } else {
            Log.debug(getClass(), "Web socket transmission message is a valid json");
        }
    }

