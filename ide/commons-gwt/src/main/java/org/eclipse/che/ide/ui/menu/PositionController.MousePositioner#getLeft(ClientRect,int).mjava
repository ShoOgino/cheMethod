    @Override
    double getLeft(ClientRect elementRect, int mouseX) {
      double left;
      switch (getHorizontalAlignment()) {
        case LEFT:
          left = mouseX;
          break;
        case MIDDLE:
          left = mouseX - elementRect.getWidth() / 2;
          break;
        case RIGHT:
        default:
          left = mouseX - elementRect.getWidth();
          break;
      }
      return left;
    }

