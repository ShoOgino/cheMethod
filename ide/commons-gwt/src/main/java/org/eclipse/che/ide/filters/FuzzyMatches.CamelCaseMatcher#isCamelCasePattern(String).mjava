    private boolean isCamelCasePattern(String word) {
      int upper = 0;
      int lower = 0;
      int code;
      int whitespace = 0;

      for (int i = 0; i < word.length(); i++) {
        code = word.charAt(i);
        if (isUpper(code)) {
          upper++;
        }
        if (isLower(code)) {
          lower++;
        }
        if (isWhitespace(code)) {
          whitespace++;
        }
      }

      if ((upper == 0 || lower == 0) && whitespace == 0) {
        return word.length() <= 30;
      } else {
        return upper <= 5;
      }
    }

