  /**
   * @return last character in the string that is not a whitespace, or {@code 0} if there is no such
   *     characters
   */
  public static char lastNonWhitespaceCharacter(String s) {
    for (int i = s.length() - 1; i >= 0; --i) {
      char c = s.charAt(i);
      if (!isWhitespace(c)) {
        return c;
      }
    }
    return 0;
  }

