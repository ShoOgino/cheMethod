  /** Dispatches this event to all listeners. */
  public void dispatch(final Dispatcher<L> dispatcher) {
    isDispatching = true;
    try {
      for (int i = 0, n = listeners.size(); i < n; i++) {
        dispatcher.dispatch(listeners.get(i));
      }
    } finally {
      isDispatching = false;
      addQueuedListeners();
      removeQueuedListeners();
    }
  }

