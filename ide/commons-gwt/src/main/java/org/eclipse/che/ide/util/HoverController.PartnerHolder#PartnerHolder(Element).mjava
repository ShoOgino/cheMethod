    PartnerHolder(final Element element) {
      this.element = element;
      mouseOverRemover =
          element.addEventListener(
              Event.MOUSEOVER,
              new EventListener() {
                @Override
                public void handleEvent(Event evt) {
                  if (relatedTargetOutsideElement((MouseEvent) evt)) {
                    hover();
                  }
                }
              },
              false);
      mouseOutRemover =
          element.addEventListener(
              Event.MOUSEOUT,
              new EventListener() {
                @Override
                public void handleEvent(Event evt) {
                  if (relatedTargetOutsideElement((MouseEvent) evt)) {
                    unhover();
                  }
                }
              },
              false);
    }

