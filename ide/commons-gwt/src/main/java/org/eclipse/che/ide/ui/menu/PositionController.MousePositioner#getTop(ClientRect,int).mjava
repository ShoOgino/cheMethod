    @Override
    double getTop(ClientRect elementRect, int mouseY) {
      double top;
      switch (getVerticalAlignment()) {
        case TOP:
          top = mouseY - elementRect.getHeight();
          break;
        case MIDDLE:
          top = mouseY - elementRect.getHeight() / 2;
          break;
        case BOTTOM:
        default:
          top = mouseY;
          break;
      }
      return top;
    }

