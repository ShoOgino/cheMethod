  /** Static factory method for creating a simple tooltip with given element as content. */
  public static Tooltip create(
      Element targetElement,
      PositionController.VerticalAlign vAlign,
      PositionController.HorizontalAlign hAlign,
      final Element tooltipContent) {
    return new Builder(
            targetElement,
            new TooltipPositionerBuilder()
                .setVerticalAlign(vAlign)
                .setHorizontalAlign(hAlign)
                .buildAnchorPositioner(targetElement))
        .setTooltipRenderer(
            new TooltipRenderer() {
              @Override
              public Element renderDom() {
                return tooltipContent;
              }
            })
        .build();
  }

