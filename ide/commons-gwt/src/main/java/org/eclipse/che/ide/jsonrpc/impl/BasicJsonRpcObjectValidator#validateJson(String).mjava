    private void validateJson(String message) {
        boolean error = false;

        try {
            JSONParser.parseStrict(message);
        } catch (Throwable e) {
            error = true;
        }

        if (error) {
            logError("Json rpc object message is not a valid json");
        } else {
            Log.debug(getClass(), "Json rpc object message is a valid json");
        }
    }

