  private void updateXYState(MouseEvent evt) {
    int x = evt.getClientX();
    int y = evt.getClientY();

    if (evt.getType().equals(Event.MOUSEDOWN)) {
      deltaX = deltaY = 0;
    } else {
      deltaX = x - prevClientX;
      deltaY = y - prevClientY;
    }

    prevClientX = x;
    prevClientY = y;
  }

