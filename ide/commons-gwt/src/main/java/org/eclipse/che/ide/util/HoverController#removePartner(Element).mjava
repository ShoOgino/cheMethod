  /** Removes a partner element from this controller. */
  public void removePartner(Element element) {
    for (int i = 0, n = partners.size(); i < n; ++i) {
      PartnerHolder holder = partners.get(i);
      if (holder.getElement() == element) {
        holder.teardown();
        partners.remove(i);
        break;
      }
    }
  }

