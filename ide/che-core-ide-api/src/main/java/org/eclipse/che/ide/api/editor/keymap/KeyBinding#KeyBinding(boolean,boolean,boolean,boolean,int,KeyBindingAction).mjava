  public KeyBinding(
      final boolean control,
      final boolean shift,
      final boolean alt,
      final boolean cmd,
      final int keycode,
      final KeyBindingAction action) {
    this.control = control;
    this.shift = shift;
    this.alt = alt;
    this.cmd = cmd;
    this.keyCodeNumber = keycode;
    this.character = null;
    this.action = action;
    this.type = "keydown";
  }

