    /**
     * Returns {@link Image} widget.
     *
     * @return {@link Image} widget
     */
    @Nullable
    public Image getImage() {
        if (sourcePath != null) {
            return new Image(GWT.getModuleBaseForStaticFiles() + sourcePath);
        } else if (imageResource != null) {
            return new Image(imageResource);
        } else {
            return null;
        }
    }

