    @Override
    public void onError() {
        notificationManager.notify("ws-agent",
                                   "Can not establish WebSocket connection to ws-agent",
                                   FAIL,
                                   FLOAT_MODE);

        if (STARTED.equals(state)) {
            state = STOPPED;
            eventBus.fireEvent(WsAgentStateEvent.createWsAgentStoppedEvent());
        }
    }

