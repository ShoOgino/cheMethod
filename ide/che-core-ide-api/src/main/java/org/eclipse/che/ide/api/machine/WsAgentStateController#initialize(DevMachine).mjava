    /**
     * Initialize state of the agent.
     *
     * @param devMachine
     *         development machine instance
     */
    public void initialize(DevMachine devMachine) {
        this.devMachine = devMachine;
        this.state = STOPPED;
        loader.show(LoaderPresenter.Phase.STARTING_WORKSPACE_AGENT);
        checkHttpConnection();
    }

