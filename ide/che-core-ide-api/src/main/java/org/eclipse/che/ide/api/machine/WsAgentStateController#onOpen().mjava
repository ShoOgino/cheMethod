  @Override
  public void onOpen() {
    messageBus.removeOnOpenHandler(this);
    // need to make sure ready state equals 1 (OPEN) in same situations after opening it still
    // equals 0 (CONNECTING)
    new Timer() {
      @Override
      public void run() {
        if (messageBus.getReadyState().equals(MessageBus.ReadyState.OPEN)) {
          cancel();
          started();
        }
      }
    }.scheduleRepeating(300);
  }

