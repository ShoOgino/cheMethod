  public static String get(
      String restContext, String providerName, String userId, List<String> scopes) {
    final String scope = Joiner.on(',').join(scopes);

    return restContext
        + oAuthServicePath
        + "?oauth_provider="
        + providerName
        + "&scope="
        + scope
        + "&userId="
        + userId
        + "&redirect_after_login="
        + redirect();
  }

