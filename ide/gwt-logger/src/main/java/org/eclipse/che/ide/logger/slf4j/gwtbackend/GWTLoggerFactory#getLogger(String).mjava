    @Override
    public Logger getLogger(String name) {
        if (name == null || ROOT_LOGGER_NAME.equalsIgnoreCase(name)) {
            name = "";
        }
        Logger logger = loggers.get(name);
        if (logger == null) {
            logger = new GwtLoggerSlf4jBackend(name);
            loggers.put(name, logger);
        }
        return logger;
    }

