  public void errorLabelShouldBeShownWhenRecipeUrlIsNotCorrect() {
    when(view.getRecipeUrl()).thenReturn("xxx://localh/correct/url");

    presenter.onRecipeUrlChanged();

    verify(locale, never()).createWsNameLengthIsNotCorrect();
