    @Override
    @SuppressWarnings("Duplicates")
    public void actionPerformed() {
        final EditorPartPresenter editorPartPresenter = editorAgent.getOpenedEditor(Path.valueOf(itemPath));
        if (editorPartPresenter != null) {
            selectRange(editorPartPresenter);
            Scheduler.get().scheduleDeferred(() -> editorAgent.activateEditor(editorPartPresenter));
            return;
        }

        appContext.getWorkspaceRoot().getFile(itemPath).then(file -> {
            if (file.isPresent()) {
                editorAgent.openEditor(file.get(), new OpenEditorCallbackImpl() {
                    @Override
                    public void onEditorOpened(EditorPartPresenter editor) {
                        selectRange(editor);
                    }
                });
            }
        });
    }

