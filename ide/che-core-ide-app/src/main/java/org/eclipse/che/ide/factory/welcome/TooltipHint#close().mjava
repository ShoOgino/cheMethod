    private void close() {
        opacity = 10;

        // Hide animation
        new Timer() {
            @Override
            public void run() {
                opacity--;
                if (opacity <= 0) {
                    cancel();
                    getElement().getParentElement().removeChild(getElement());
                } else {
                    getElement().getStyle().setProperty("opacity", "0." + opacity);
                }
            }
        }.scheduleRepeating(50);
    }

