  /** {@inheritDoc} */
  @Override
  public void updateProfile(
      @NotNull String id, Map<String, String> updates, AsyncRequestCallback<ProfileDto> callback) {
    String requestUrl = PROFILE + id;

    asyncRequestFactory
        .createPostRequest(requestUrl, null)
        .header(ACCEPT, APPLICATION_JSON)
        .header(CONTENT_TYPE, APPLICATION_JSON)
        .data(JsonHelper.toJson(updates))
        .loader(loaderFactory.newLoader("Updating user's profile..."))
        .send(callback);
  }

