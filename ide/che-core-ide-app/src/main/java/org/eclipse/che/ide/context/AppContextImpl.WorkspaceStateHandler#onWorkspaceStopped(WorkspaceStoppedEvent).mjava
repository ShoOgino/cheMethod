    @Override
    public void onWorkspaceStopped(WorkspaceStoppedEvent event) {
      setWorkspace(null);
      if (persistWorkspaceStatePromise != null) {
        persistWorkspaceStatePromise.then(
            arg -> {
              clearProjects();
              resourceManager = null;
              clearRuntime();
            });
      } else {
        clearProjects();
        resourceManager = null;
        clearRuntime();
      }
    }

