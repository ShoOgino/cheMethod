    private void setTooltip(String newTooltipText) {
        if (newTooltipText.equals(tooltipText)) {
            return;
        }

        tooltipText = newTooltipText;

        if (tooltip != null) {
            tooltip.destroy();
        }

        tooltip = Tooltip.create((Element)getElement(), BOTTOM, MIDDLE, newTooltipText);
    }

