  @Override
  public void expandTree() {
    if (everExpanded[0]) {
      tree.expandAll();

      return;
    }

    appContext
        .getWorkspaceRoot()
        .getTree(-1)
        .then(
            new Operation<Resource[]>() {
              @Override
              public void apply(Resource[] ignored) throws OperationException {
                everExpanded[0] = true;

                tree.expandAll();
              }
            });
  }

