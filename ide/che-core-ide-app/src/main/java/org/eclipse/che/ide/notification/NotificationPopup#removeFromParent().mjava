  /** {@inheritDoc} */
  @Override
  public void removeFromParent() {
    if (isOrWasAttached()) {
      addStyleName(resources.notificationCss().notificationHidingAnimation());

      new DelayedTask() {
        @Override
        public void onExecute() {
          NotificationPopup.super.removeFromParent();
        }
      }.delay(500);
    } else {
      super.removeFromParent();
    }
  }

