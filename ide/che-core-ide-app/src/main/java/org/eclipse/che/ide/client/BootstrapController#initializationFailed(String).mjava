  /**
   * Schedules calling of initializationFailedNative function to not freeze the browser when leaving
   * the IDE.
   *
   * @param reason failure encountered
   */
  private void initializationFailed(String reason) {
    new Timer() {
      @Override
      public void run() {
        initializationFailedNative(reason);
      }
    }.schedule(500);
  }

