  /** {@inheritDoc} */
  @Override
  public Optional<Marker> getMarker(String type) {
    checkArgument(!isNullOrEmpty(type), "Invalid marker type occurred");

    if (markers.length == 0) {
      return absent();
    }

    for (Marker marker : markers) {
      if (marker.getType().equals(type)) {
        return of(marker);
      }
    }

    return absent();
  }

