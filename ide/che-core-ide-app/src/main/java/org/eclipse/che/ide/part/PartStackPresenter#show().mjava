  @Override
  public void show() {
    if (state != State.HIDDEN) {
      return;
    }

    // Change the state to MINIMIZED for the following restoring.
    state = State.MINIMIZED;

    if (delegate != null) {
      delegate.onRestore(this);
    }

    notifyPartStackStateChanged();

    if (activePart != null) {
      activePart.onOpen();
    }

    if (activeTab != null) {
      selectActiveTab(activeTab);
    }
  }

