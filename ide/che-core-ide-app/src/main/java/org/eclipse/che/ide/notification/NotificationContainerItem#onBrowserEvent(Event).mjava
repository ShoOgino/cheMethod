    /** {@inheritDoc} */
    @Override
    public void onBrowserEvent(Event event) {
        super.onBrowserEvent(event);

        switch (DOM.eventGetType(event)) {
            case Event.ONCLICK:
                clickCount++;
                if (clickCount == 1) {
                    Timer timer = new Timer() {
                        @Override
                        public void run() {
                            if (clickCount == 1) {
                                clickCount = 0;
                                delegate.onClick(notification);
                            }
                        }
                    };
                    timer.schedule(200);
                }
                break;
            case Event.ONDBLCLICK:
                clickCount = 0;
                delegate.onDoubleClick(notification);
                break;
        }
    }

