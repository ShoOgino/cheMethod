    private void reconnect() {
        if (countRetry <= 0) {
            view.showErrorMessage(locale.terminalErrorStart());
        } else {
            view.showErrorMessage(locale.terminalTryRestarting());
            new Timer() {
                @Override
                public void run() {
                    connect();
                }
            }.schedule(TIME_BETWEEN_CONNECTIONS);
        }
    }

