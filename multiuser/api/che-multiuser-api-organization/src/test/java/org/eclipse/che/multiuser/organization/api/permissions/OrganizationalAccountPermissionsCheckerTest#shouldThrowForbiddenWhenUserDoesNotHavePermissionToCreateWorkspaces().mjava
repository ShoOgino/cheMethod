      throws Exception {
    when(subject.hasPermission(
            OrganizationDomain.DOMAIN_ID, ORG_ID, OrganizationDomain.CREATE_WORKSPACES))
        .thenReturn(false);

    permissionsChecker.checkPermissions(ORG_ID, AccountOperation.CREATE_WORKSPACE);
  }

